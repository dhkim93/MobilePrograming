<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/EdTx1"/>
    <EditText
        android:id="@+id/EdTx2"/>
    <TableRow>

        <Button
            android:id="@+id/BtnAc"
            android:text="AC"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/BtnClear"
            android:text="C"
            android:layout_weight="2"/>


    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/Btn7"
            android:text="7"/>
        <Button
            android:id="@+id/Btn8"
            android:text="8"/>
        <Button
            android:id="@+id/Btn9"
            android:text="9"/>
        <Button
            android:id="@+id/BtnDiv"
            android:text="÷"/>

    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/Btn4"
            android:text="4"/>
        <Button
            android:id="@+id/Btn5"
            android:text="5"/>
        <Button
            android:id="@+id/Btn6"
            android:text="6"/>
        <Button
            android:id="@+id/BtnMlt"
            android:text="x"/>

    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/Btn1"
            android:text="1"/>
        <Button
            android:id="@+id/Btn2"
            android:text="2"/>
        <Button
            android:id="@+id/Btn3"
            android:text="3"/>
        <Button
            android:id="@+id/BtnSub"
            android:text="-"/>

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/Btn0"
            android:text="0"
            android:layout_weight="3"/>
        <Button
            android:id="@+id/BtnAdd"
            android:text="+"/>
    </TableRow>

    <TextView
        android:id="@+id/TxResult"
        android:textSize="30dp"
        android:textColor="#ff0000"
        android:text="계산 결과 : "/>

</TableLayout>
